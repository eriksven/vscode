{
  "workbench.sideBar.location": "right",
  // Doesn't hurt my eyes
  "editor.fontFamily": "'Courier New'",
  // Yep, in the terminal too
  "terminal.integrated.fontFamily": "'Courier New'",
  // Still readable
  "editor.fontSize": 12,
  "terminal.integrated.fontSize": 12,
  // I want to know if it's alive
  "terminal.integrated.cursorBlinking": true,
  // Gives it a bit more air
  "terminal.integrated.cursorStyle": "underline",
  // This literally saves lives
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  // Powershell is cool and all but...
  "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
  // This is good I guess
  "gitlens.historyExplorer.enabled": true,
  // Yes take care of it for me
  "gitlens.gitExplorer.files.layout": "auto",
  // Sounds good too
  "git.enableSmartCommit": true,
  // Don't wanna see this in the explorer
  "files.exclude": {
    "**/(.git)": true,
    // Turn your explorer into an app-hang-minesweeper game! I'm done with that.
    "**/node_modules": true,
    // Don't care about lock files
    "**/*.lock": true,
    // There's an integrated terminal for this
    "**/*.log": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.elixir_ls": true
  },

  "tfvc.location": "C:\\Program Files (x86)\\Microsoft Visual Studio\\2017\\Enterprise\\Common7\\IDE\\CommonExtensions\\Microsoft\\TeamFoundation\\Team Explorer\\TF.exe",
  "team.showWelcomeMessage": false,
  "todo-tree.defaultHighlight": {
    "foreground": "green",
    "type": "none"
  },
  "todo-tree.customHighlight": {
    "TODO": {},
    "FIXME": {}
  },
  "workbench.startupEditor": "newUntitledFile",
  "window.zoomLevel": 0,
  "workbench.colorTheme": "Monokai Dimmed",
  "explorer.confirmDragAndDrop": false,
  "eslint.validate": [
    {
      "language": "html",
      "autoFix": true
    },
    {
      "language": "vue",
      "autoFix": true
    },
    {
      "language": "javascript",
      "autoFix": true
    }
  ],
  "eslint.autoFixOnSave": true
}
