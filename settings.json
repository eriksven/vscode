{
    // It just feels more natural
    "workbench.sideBar.location": "right",
    // Doesn't hurt my eyes
    "editor.fontFamily": "'Courier New'",
    // Yep, in the terminal too
    "terminal.integrated.fontFamily": "Courier New'",
    // I want to know if it's alive
    "terminal.integrated.cursorBlinking": true,
    // Gives it a bit more air
    "terminal.integrated.cursorStyle": "underline",
    // Literally saves lives
    "editor.formatOnSave": true,
    // GitLens default settings
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    },
    "gitlens.historyExplorer.enabled": true
}