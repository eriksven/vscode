{
  "workbench.sideBar.location": "right",
  // Still readable
  "editor.fontSize": 12,
  "editor.fontLigatures": true,
  "editor.renderWhitespace": "all",
  "terminal.integrated.fontSize": 12,
  // I want to know if it's alive
  "terminal.integrated.cursorBlinking": true,
  // Gives it a bit more air
  "terminal.integrated.cursorStyle": "underline",
  // This literally saves lives
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  // Powershell is cool and all but...
  "terminal.integrated.shell.windows": "C:\\Windows\\System32\\bash.exe",
  // Start in interactive mode, so that .bashrc gets loaded
  "terminal.integrated.shellArgs.windows": ["-i"],
  // Sounds good too
  "git.enableSmartCommit": true,
  // Don't wanna see this in the explorer
  "files.exclude": {
    "**/(.git)": true,
    // Turn your explorer into an app-hang-minesweeper game! I'm done with that.
    "**/node_modules": true,
    // Don't care about lock files
    "**/*.lock": true,
    // There's an integrated terminal for this
    "**/*.log": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.elixir_ls": true
  },
  "workbench.startupEditor": "newUntitledFile",
  "window.zoomLevel": 0,
  "workbench.colorTheme": "Universe",
  "explorer.confirmDragAndDrop": false,
  "workbench.iconTheme": "vs-minimal",
  "explorer.confirmDelete": false,
  "terminal.integrated.rendererType": "dom"
}
